<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">

<service-builder auto-namespace-tables="true" package-path="com.liferay.osb.ldn.documentation.project">
	<author>Ryan Park</author>
	<namespace>OSB_LDN</namespace>
	<entity local-service="true" name="DocumentationProject" remote-service="true" uuid="true">

		<!-- PK fields -->

		<column name="documentationProjectId" primary="true" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="name" type="String" />
		<column name="description" type="String" />
		<column name="iconFileName" type="String" />
		<column name="status" type="int" />

		<!-- Order -->

		<order by="asc">
			<order-column case-sensitive="false" name="name" />
		</order>

		<!-- Finder methods -->

		<finder name="Name">
			<finder-column name="name" />
		</finder>
	</entity>
	<exceptions>
		<exception>DocumentationProjectDescription</exception>
		<exception>DocumentationProjectIcon</exception>
		<exception>DocumentationProjectIconExtension</exception>
		<exception>DocumentationProjectName</exception>
	</exceptions>
</service-builder>