<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>1</portlet-name>
		<use-default-template>false</use-default-template>
		<layout-cacheable>true</layout-cacheable>
		<system>true</system>
	</portlet>
	<portlet>
		<portlet-name>2</portlet-name>
		<scheduler-entry>
			<scheduler-event-listener-class>com.liferay.saml.messaging.SamlIdpSsoSessionMessageListener</scheduler-event-listener-class>
			<trigger>
				<simple>
					<property-key>saml.idp.sso.session.check.interval</property-key>
					<time-unit>minute</time-unit>
				</simple>
			</trigger>
		</scheduler-entry>
		<scheduler-entry>
			<scheduler-event-listener-class>com.liferay.saml.messaging.SamlMetadataMessageListener</scheduler-event-listener-class>
			<trigger>
				<simple>
					<property-key>saml.metadata.refresh.interval</property-key>
					<time-unit>second</time-unit>
				</simple>
			</trigger>
		</scheduler-entry>
		<scheduler-entry>
			<scheduler-event-listener-class>com.liferay.saml.messaging.SamlSpAuthRequestMessageListener</scheduler-event-listener-class>
			<trigger>
				<simple>
					<property-key>saml.sp.auth.request.check.interval</property-key>
					<time-unit>minute</time-unit>
				</simple>
			</trigger>
		</scheduler-entry>
		<scheduler-entry>
			<scheduler-event-listener-class>com.liferay.saml.messaging.SamlSpMessageMessageListener</scheduler-event-listener-class>
			<trigger>
				<simple>
					<property-key>saml.sp.message.check.interval</property-key>
					<time-unit>minute</time-unit>
				</simple>
			</trigger>
		</scheduler-entry>
		<control-panel-entry-category>control_panel.configuration</control-panel-entry-category>
		<control-panel-entry-weight>10</control-panel-entry-weight>
		<control-panel-entry-class>com.liferay.portal.kernel.portlet.AdministratorControlPanelEntry</control-panel-entry-class>
		<header-portlet-css>/admin/css/main.scss</header-portlet-css>
		<css-class-wrapper>saml-portlet-admin</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>